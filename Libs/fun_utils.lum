

function fun(f, ...)
	local args = {...}

	local function _fun(...)
		return f(table.unpack(args), ...)
	end

	return _fun
end

function nil_fun(...)
	local function _nil(...)
		return nil
	end
	return _nil
end

function wrape_fun(f, ...)
	local args = {...}
	if #args == 0 then
		return f
	end
	local function _fun()
		return f(table.unpack(args))
	end
	return _fun
end
