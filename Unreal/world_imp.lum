

class('world')

function world._init(self)
end

function world.set_instance(self, instance)
	self._world = instance
end

function world.__index(self, name)
	local attr = getmetatable(self)[name]
	if attr ~= nil then
		return attr
	end

	return rawget(self, '_world')[name]
end

-- set global
_set_global('_world', world())